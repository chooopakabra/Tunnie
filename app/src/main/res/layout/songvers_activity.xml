<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/mainContainer">
        
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="match_parent"
		            android:background="#ffffff"
		            android:orientation="vertical">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/menuButton"
                            android:layout_width="63dp"
                            android:layout_height="47dp"
                            android:src="@drawable/index" />

                            <com.example.tunnie.ScrollDowner
                            android:id="@+id/getDownWithTheBoogie2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </com.example.tunnie.ScrollDowner>
                    </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+"
                                android:id="@+id/plusTrans"
                                android:singleLine="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="transpo"
                                android:id="@+id/textView" />

                            <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:id="@+id/minusTrans" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BestVer"
                                android:id="@+id/bestTrans" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Favorite"
                                android:id="@+id/add2Favorite" />
                        </LinearLayout>
                    </LinearLayout>

                    <ScrollView
		            android:id="@+id/scrollView1"
		            android:layout_width="match_parent"
		            android:layout_height="fill_parent" >

		            <FrameLayout
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:id="@+id/replaceWithZoomable">

		                <LinearLayout
		                    android:id="@+id/mainLayout"
		                    android:layout_width="fill_parent"
		                    android:layout_height="fill_parent"
		                    android:orientation="vertical" >
		                </LinearLayout>

		            </FrameLayout>
		        </ScrollView>
		
		    </LinearLayout>

		        <com.example.tunnie.ChordDisplayCustomView
		        android:id="@+id/chordDisplayCustomView"
		        android:layout_width="176dp"
		        android:layout_height="wrap_content"
		        android:visibility="gone">
		        </com.example.tunnie.ChordDisplayCustomView>

		        <ProgressBar
		            android:id="@+id/progressBar1"
		            style="?android:attr/progressBarStyleLarge"
		            android:layout_width="110dp"
		            android:layout_height="110dp"
		            android:layout_gravity="center" />

        </FrameLayout>
    

</LinearLayout>
