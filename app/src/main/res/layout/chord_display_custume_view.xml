<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:background="#e83172"
        android:orientation="horizontal"
        android:id="@+id/main">
        
           <TextView
               android:id="@+id/leftArrow"
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_gravity="left"
               android:gravity="center"
               android:text="&lt;"
               android:textColor="#ffffff"
               android:textSize="80sp" />

           <TextView
               android:id="@+id/fretStartAndChordName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="fretStartAndChordName" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal" >
                <ImageView
	                 android:id="@+id/chordGridImage"
	                 android:layout_width="110dp"
	                 android:layout_height="123dp"
	                 android:layout_gravity="center_horizontal"
	                 android:src="@drawable/chord_grid" />

                <LinearLayout
                    android:id="@+id/layoutGuitarChordDiagrams"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="12dp">

                    <ImageView
                        android:id="@+id/dot1"
                        android:layout_width="5pt"
                        android:layout_height="5pt"
                        android:src="@drawable/round"
                        android:layout_marginRight="2pt"
                        android:layout_marginTop="4pt"/>
                     <ImageView
                        android:id="@+id/dot2"
                        android:layout_width="5pt"
                        android:layout_height="5pt"
                        android:src="@drawable/round"
                        android:layout_marginRight="2pt"
                        android:layout_marginTop="9pt" />
                      <ImageView
                        android:id="@+id/dot3"
                        android:layout_width="5pt"
                        android:layout_height="5pt"
                        android:src="@drawable/round"
                        android:layout_marginRight="2pt" 
                        android:layout_marginTop="19pt"/>
                       <ImageView
                        android:id="@+id/dot4"
                        android:layout_width="5pt"
                        android:layout_height="5pt"
                        android:src="@drawable/round"
                        android:layout_marginRight="2pt"
                        android:layout_marginTop="29pt" />
                        <ImageView
                        android:id="@+id/dot5"
                        android:layout_width="5pt"
                        android:layout_height="5pt"
                        android:src="@drawable/round"
                        android:layout_marginRight="2pt"
                        android:layout_marginTop="39pt" />
                         <ImageView
                        android:id="@+id/dot6"
                        android:layout_width="5pt"
                        android:layout_height="5pt"
                        android:src="@drawable/round"
                        android:layout_marginRight="2pt"
                        android:layout_marginTop="0pt" />
                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/rightArrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:text=">"
                android:textColor="#ffffff"
                android:textSize="80sp" />

</FrameLayout>

